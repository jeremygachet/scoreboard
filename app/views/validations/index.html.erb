<p id="notice"><%= notice %></p>

<h1>Validations</h1>
<div id="myGrid" style="height: 600px;width:500px;" class="ag-theme-balham"></div>



<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Exo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @validations.each do |validation| %>
      <tr>
        <td><%= validation.team %></td>
        <td><%= validation.exo %></td>
        <td><%= link_to 'Show', validation %></td>
        <td><%= link_to 'Edit', edit_validation_path(validation) %></td>
        <td><%= link_to 'Destroy', validation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Validation', new_validation_path %>
